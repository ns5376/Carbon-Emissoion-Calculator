<link rel="stylesheet" href="/built.css">
<div class="container mx-auto p-6">
  <h1 class="text-2xl font-bold mb-4">Emission Entry Details</h1>
  <p>Date: {{entry.date}}</p>
  <ul>
    {{#each entry.emissions}}
    <li class="p-4 bg-white shadow rounded-lg">
      <h2 class="text-lg font-bold">{{@key}}</h2>
      <p>Amount: {{this.amount}} {{this.unit}}</p>
      <p>Description: {{this.description}}</p>
    </li>
    {{/each}}
  </ul>
  <a href="/dashboard" class="text-blue-500 hover:underline">Back to Dashboard</a>
</div>
