<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carbon Emission Data Entry</title>
    <link href="https://cdn.tailwindcss.com" rel="stylesheet">
    <script src="/js/emissionform.js" defer></script>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen ">
    <div class="bg-white p-8 rounded-lg shadow-lg max-w-md w-full">
        <h2 class="text-2xl font-bold mb-6 text-center">Enter Your Emission Data</h2>
        <form id="emissionForm" class="space-y-4">
            <!-- Transportation -->
            <div>
                <label for="transportationAmount" class="block text-sm font-medium text-gray-700">Transportation Distance</label>
                <input
                    type="number"
                    id="transportationAmount"
                    name="transportationAmount"
                    placeholder="Enter distance"
                    required
                    class="mt-1 block w-full p-2 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500"
                />
                <select
                    id="transportationUnit"
                    name="transportationUnit"
                    class="mt-1 block w-full p-2 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500"
                    required
                >
                    <option value="km">Kilometers</option>
                    <option value="mi">Miles</option>
                </select>
            </div>

            <!-- Electricity -->
            <div>
                <label for="electricityAmount" class="block text-sm font-medium text-gray-700">Electricity Usage</label>
                <input
                    type="number"
                    id="electricityAmount"
                    name="electricityAmount"
                    placeholder="Enter energy usage"
                    required
                    class="mt-1 block w-full p-2 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500"
                />
                <select
                    id="electricityUnit"
                    name="electricityUnit"
                    class="mt-1 block w-full p-2 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500"
                    required
                >
                    <option value="kWh">kWh</option>
                    <option value="MWh">MWh</option>
                </select>
            </div>

            <!-- Waste -->
            <div>
                <label for="wasteAmount" class="block text-sm font-medium text-gray-700">Waste</label>
                <input
                    type="number"
                    id="wasteAmount"
                    name="wasteAmount"
                    placeholder="Enter waste weight"
                    required
                    class="mt-1 block w-full p-2 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500"
                />
                <select
                    id="wasteUnit"
                    name="wasteUnit"
                    class="mt-1 block w-full p-2 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500"
                    required
                >
                    <option value="kg">Kilograms</option>
                    <option value="t">Tons</option>
                </select>
            </div>

            <!-- Water -->
            <div>
                <label for="waterAmount" class="block text-sm font-medium text-gray-700">Water Usage</label>
                <input
                    type="number"
                    id="waterAmount"
                    name="waterAmount"
                    placeholder="Enter water volume"
                    required
                    class="mt-1 block w-full p-2 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500"
                />
                <select
                    id="waterUnit"
                    name="waterUnit"
                    class="mt-1 block w-full p-2 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500"
                    required
                >
                    <option value="l">Liters</option>
                    <option value="m3">Cubic Meters</option>
                </select>
            </div>

            <!-- Submit Button -->
            <button
                type="submit"
                class="w-full bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
            >
                Submit
            </button>
        </form>
        <div id="result" class="mt-4 text-sm text-green-600 hidden"></div>
    </div>
</body>
</html>
