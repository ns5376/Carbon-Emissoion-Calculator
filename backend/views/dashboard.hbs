<!-- views/dashboard.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <link rel="stylesheet" href="/built.css">
</head>
<body>
  <header>
    <h1>Welcome to Your Dashboard, {{user.username}}!</h1>
    <a href="/logout">Logout</a>
  </header>
  
  <section>
    <h2>Your Information</h2>
    <ul>
      <li><strong>Username:</strong> {{user.username}}</li>
      <li><strong>Email:</strong> {{user.email}}</li>
    </ul>
  </section>
  <h1>Dashboard</h1>

{{#if entry}}
    <h2>Your Latest Emission Entry</h2>
    <p><strong>Date:</strong> {{entry.date}}</p>
    <p><strong>Transportation:</strong> {{entry.emissions.transportation.amount}} {{entry.emissions.transportation.unit}}</p>
    <p><strong>Electricity:</strong> {{entry.emissions.electricity.amount}} {{entry.emissions.electricity.unit}}</p>
{{else}}
    <p>No recent emissions data available.</p>
{{/if}}

  
  <footer>
    <p>Carbon Emission Calculator Â© 2024</p>
  </footer>
</body>
</html>
